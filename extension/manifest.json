{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.1",
  "default_locale": "en",

  "icons": {
    "48": "icon.svg"
  },

  "permissions": [
    "https://twitter.com/*",
    "https://mobile.twitter.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://mobile.twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    "external/*"
  ],

  "applications": {
    "gecko": {
      "id": "{47fab76c-ec06-42cf-b459-6b5a47e55049}",
      "strict_min_version": "68.0"
    }
  }

}
